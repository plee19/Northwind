@using Northwind.Models
@model Customer
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<div class="well">
    <!-- Customer Form -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <!-- Company Name -->
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.CompanyName, "Company", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.CompanyName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Company Name" } })
            </div>
        </div>
        <!-- Password -->
        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            </div>
        </div>
        <!-- Contact Name -->
        <div class="form-group">
            @Html.LabelFor(m => m.ContactName, "Contact Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.ContactName, new { htmlAttributes = new { @class = "form-control", placeholder = "Contact Name" } })
            </div>
        </div>
        <!-- Contact Title -->
        <div class="form-group">
            @Html.LabelFor(m => m.ContactTitle, "Contact Title", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.ContactTitle, new { htmlAttributes = new { @class = "form-control", placeholder = "Contact Title" } })
            </div>
        </div>
        <!-- Address -->
        <div class="form-group">
            @Html.LabelFor(m => m.Address, "Address", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Address" } })
            </div>
        </div>
        <!-- City -->
        <div class="form-group">
            @Html.LabelFor(m => m.City, "City", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.City, new { htmlAttributes = new { @class = "form-control", placeholder = "City" } })
            </div>
        </div>
        <!-- Region -->
        <div class="form-group">
            @Html.LabelFor(m => m.Region, "Region", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Region, new { htmlAttributes = new { @class = "form-control", placeholder = "Region" }})
            </div>
        </div>
        <!-- Postal Code -->
        <div class="form-group">
            @Html.LabelFor(m => m.PostalCode, "Postal Code", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.PostalCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Postal Code" } })
            </div>
        </div>
        <!-- Country -->
        <div class="form-group">
            @Html.LabelFor(m => m.Country, "Country", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Country, new { htmlAttributes = new { @class = "form-control", placeholder = "Country" } })
            </div>
        </div>
        <!-- Phone -->
        <div class="form-group">
            @Html.LabelFor(m => m.Phone, "Phone", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control", placeholder = "Phone" } })
            </div>
        </div>
        <!-- Fax -->
        <div class="form-group">
            @Html.LabelFor(m => m.Fax, "Fax", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Fax, new { htmlAttributes = new { @class = "form-control", placeholder = "Fax" } })
            </div>
        </div>
        <!-- Email -->
        <div class="form-group">
            @Html.LabelFor(m => m.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" }})
            </div>
        </div>
        <!-- Submit -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
</div>

<div class="font-md">
    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a>
</div>