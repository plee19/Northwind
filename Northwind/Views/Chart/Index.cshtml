@using Northwind.Models
@model IEnumerable<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="font-md">Charts by Category</div>
<!-- List group -->
<div class="list-group">
    @foreach (Category c in @Model)
    {
        <a href="~/Chart/Chart/@c.CategoryID" class="list-group-item"><strong>@c.CategoryName</strong> - @c.Description</a>
    }
</div>

<div>Charts by Year</div>
<!-- List group -->
<div class="list-group">
</div>

<div class="font-md">
    <a href="~/Home/Index"><i class="fa fa-home"></i> Home</a>
</div>